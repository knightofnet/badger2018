    <Grid>
        <Rectangle x:Name="rMatin" Fill="DodgerBlue" HorizontalAlignment="Left" Height="28" Stroke="#7F1E90FF" VerticalAlignment="Bottom" Width="28" Margin="0,0,0,0"/>

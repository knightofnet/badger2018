        <Rectangle x:Name="rAprem" Fill="Goldenrod" HorizontalAlignment="Left" Height="28" Stroke="#7FDAA520" VerticalAlignment="Bottom" Width="28" Margin="28,0,0,00"/>
        <Label x:Name="lblM" Content="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="18" Foreground="White" Width="28" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Margin="28,0,0,0" Opacity="0.8" />

        <Rectangle x:Name="rPauses" Fill="DarkRed" Height="7" Margin="0,0,0,29"  VerticalAlignment="Bottom"/>

        <Label x:Name="lblDay" Content="ven. 3 déc." VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="8" Height="21"/>




    </Grid>
</UserControl>

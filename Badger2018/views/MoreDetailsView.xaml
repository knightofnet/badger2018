<Window x:Class="Badger2018.views.MoreDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Résumé détaillé de la journée" Height="467.4" Width="381.6" ResizeMode="NoResize" Icon="/Badger2018;component/Resources/Paomedia-Small-N-Flat-Clock.ico">
    <Grid>
        <Label x:Name="lblCurrentDay" Content="Vendredi 7 septembre 2018" Margin="10,10,9.6,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="18"/>
        <Label Content="Type de journée : " HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTyJournee" Content="Label" HorizontalAlignment="Left" Margin="114,49,0,0" VerticalAlignment="Top" Width="143"/>
        <ScrollViewer Margin="10,118,10.2,33.6" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="stackBadgeage"   ScrollViewer.HorizontalScrollBarVisibility="Auto" />
        </ScrollViewer>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Right" Margin="0,0,10.2,9.6" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click"/>
        <Label Content="Temps travaillé : " HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTempsTrav" Content="Label" HorizontalAlignment="Left" Margin="113,75,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
